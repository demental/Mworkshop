<h2>Students</h2>

<table class="table table-bordered table-nopad">
<tr>
<th>Name</th>
</tr>
{{#each student in model itemController="student"}}
  <tr>
    <td>
      {{input type="text" value=student.name focus-out="acceptChanges" insert-newline="acceptChanges"}}
    </td>
    <td>
      {{view "groups_select" selection=student.group.content content=groups change="acceptChanges"}}
    </td>
  </tr>
{{/each}}
<tr>
  <td>
  {{input
  type="text"
  id="new-student-name"
  placeholder="Name"
  value=name
  action="create"}}
  </td>
  <td>
  {{view "groups_select" selection=currentGroup content=groups prompt = '--'}}
  </td>
</tr>
</table>
